{{#if isLogged}}
<ul class="nav navbar-nav">
  <li class="{{#if isNavInMessages}}active {{/if}}caret-left">
    <a href="#mailbox/unreaded"><span class="glyphicon glyphicon-inbox"></span> Сообщения{{#if unreaded_messages}} <span class="badge">{{unreaded_messages}}</span>{{/if}}</a>
  </li>
  <li class="{{#if isNavInGallery}}active {{/if}}caret-left"><a href="#gallery"><span class="glyphicon glyphicon-picture"></span> Галлерея</a></li>
  {{#if is_groups}}
  <li class="caret-left{{#unless is_many_groups}} caret-right{{/unless}}">
    <a href="#group/{{current_group.id}}">
      <span class="glyphicon glyphicon-certificate"></span> {{current_group.name}}{{#if current_group.unwatched_events}}<span class="badge">{{current_group.unwatched_events}}</span>{{/if}}
    </a>
  </li>
  {{#if is_many_groups}}
  <li class="dropdown pull-left">
    <a class="dropdown-toggle low-caret-left caret-right" data-toggle="dropdown">
      {{#if has_unreaded_in_groups}}
      <span class="glyphicon glyphicon-collapse-down"></span>
      {{else}}
      <b class="caret"></b>
      {{/if}}
    </a>
    <ul class="dropdown-menu inverse-dropdown pull-right">
      {{#each groups}}
      <li>
        <a href="#group/{{id}}">{{name}}{{#if unwatched_events}}<span class="badge">{{unwatched_events}}</span>{{/if}}</a>
      </li>
      {{/each}}
    </ul>
    {{/if}}
    {{/if}}
</ul>

<ul class="nav navbar-nav navbar-right">
  <li class="dropdown caret-left">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
      <span class="glyphicon glyphicon-user" ></span> {{name}} <span class="caret"></span>
    </a>
    <ul class="dropdown-menu inverse-dropdown" role="menu">
      <li><a id="group-create-action" href="#group-creation"><span class="glyphicon glyphicon-folder-open"></span> Создать новую группу</li>
      <li><a id="logout-action" href="#" onClick="return false"><span class="glyphicon glyphicon-off"></span> Выйти</a></li>
    </ul>
  </li>
</ul>
{{else}}
<ul class="nav navbar-nav navbar-right">
  <a href="#login"><button type="button" class="btn btn-success navbar-btn">Войти</button></a>
  <div class="nav navbar-nav spacer-w-sm"></div>
</ul>
{{/if}}
