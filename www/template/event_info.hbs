<div class="ui basic padded segment container">
  <h2 class="ui dividing header">
    <div class="content">
      {{{name}}}
      <div class="ui small {{state.color}} label">
        {{state.text}}
      </div>
    </div>
  </h2>
  <div class="ui right aligned basic segment zeromargin">
    <i>
      <strong>Начало:</strong> {{starting_time}}  <strong>Окончание:</strong> {{ending_time}}
    </i>
  </div>
  <div id="description">
    {{{description}}}
  </div>
  <div id="action">
    {{{action}}}
  </div>
</div>
