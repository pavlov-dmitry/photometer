<div class="preview panel panel-default">
  <div class="panel-body">
    <a href="#{{url}}"><img src="preview/{{id}}.png" alt="Нет картинки :("/></a>
  </div>
  <div class="panel-footer clearfix">
    <a href="#edit_photo/{{id}}">
      <span class="btn btn-default pull-right" aria-label="Переименовать">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      </span>
    </a>
    <h4 class="text-left">{{#if name}}{{name}}{{else}}Без имени{{/if}}</h4>
  </div>
</div>
