<div class="ui container">
  <h2 class="ui dividing header">
    <div class="content">
      <i class="child icon"></i>
      Создание новой группы
    </div>
  </h2>
  <form id="form-group-creation" class="ui form" onsubmit="return false;" role="group-creation">
    <div class="field">
      <label>Имя группы:</label>
      <input type="text" id="name-input" placeholder="Имя группы" value="{{name}}" maxlength="64" required autofocus>
    </div>
    <div class="field">
      <label>Пригласить:</label>
      <select id="users" multiple="" class="ui fluid search dropdown">
        <option value="">Выберите пользователей...</option>
      </select>
    </div>
    <div class="field">
      <label>Описание:</label>
      <textarea type="text" class="form-control" id="description-input" placeholder="Подробное описание, с поддержкой формата markdown." maxlentgh="2048" rows="10" value="{{description}}" required/>
      <h4 class="ui header">
        <div class="content">
          Предпросмотр описания:
        </div>
      </h4>
      <div class="ui secondary segment description">
        <div id="info-preview">
        </div>
      </div>
    </div>
    <div id="form-errors" class="ui negative hidden message">
      <div class="header">Ну пока не вышло:</div>
      <ul id="errors-list" class="list">
      </ul>
    </div>
    <button class="ui primary button" type="submit">
      Создать
    </button>
  </form>
</div>
